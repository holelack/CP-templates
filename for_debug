#include <bits/stdc++.h>
using namespace std;
using ll = long long int;
#define fastio() {ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);}
template<typename T>
void debug(const T& x, const std::string& name) {
    std::cout << name << ": " << x << '\n';
}
template<typename Container>
void debugVec(const Container& c, const std::string& name) {
    std::cout << name << ":\n";
    for (const auto& v : c) std::cout << v << ' ';
    std::cout << '\n';
}

template<typename Matrix>
void printMatrix(const Matrix& a, const std::string& name) {
    std::cout << name << ":\n";
    int n = a.size();
    if (a.empty()) return;
    if (n == 0) return;

    int m = a[0].size();
    int maxWidth = 0;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            std::ostringstream oss;
            oss << a[i][j];
            maxWidth = max(maxWidth, (int)oss.str().size());
        }
    }
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            cout << setw(maxWidth) << a[i][j] << ' ';
        }
        cout << '\n';
    }
}

template<typename Matrix>
void print2D(const Matrix& a, const std::string& name) {
    std::cout << name << ":\n";
    for (auto i: a) {
        for (int j: i) cout << j << " ";
        cout << '\n';
    }
}
template<typename T>
auto makeND(int n, const T& val = T()) {
    return vector<T>(n, val);
}

template<typename T, typename... Args>
auto makeND(int n, Args... args) {
    return vector(n, makeND<T>(args...));
}
#define dbg(x) debug((x), #x)
#define dbgVec(x) debugVec((x), #x)
#define dbgmtrx(x) printMatrix((x), #x)
#define dbg2D(x) print2D((x), #x)
